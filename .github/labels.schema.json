{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "GitHub Labels Schema",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"name": {
				"type": "string",
				"description": "Name of the label.",
				"minLength": 1,
				"pattern": "^(?:[^\\s].*)?[^\\s]$"
			},
			"color": {
				"type": "string",
				"description": "Color of the label.",
				"pattern": "^#?[\\dA-Fa-f]{6}$"
			},
			"description": {
				"type": "string",
				"description": "Description of the label.",
				"minLength": 1,
				"pattern": "^(?:[^\\s].*)?[^\\s]$"
			},
			"aliases": {
				"type": "array",
				"description": "Aliases of the label.",
				"items": {
					"type": "string",
					"description": "Alias of the label.",
					"minLength": 1,
					"pattern": "^(?:[^\\s].*)?[^\\s]$"
				},
				"uniqueItems": true
			}
		},
		"required": [
			"name",
			"color"
		]
	},
	"uniqueItems": true
}
